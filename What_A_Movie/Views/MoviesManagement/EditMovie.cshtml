@model MovieEditViewModel

<h2>Edit pie</h2>

<form asp-controller="MoviesManagement" asp-action="EditMovie" method="post" class="form-horizontal" role="form">
    <h4>Update the pie details below</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Movie.MovieId" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Movie.MovieId" class="form-control" />@*readonly="readonly"*@
            <span asp-validation-for="Movie.MovieId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Movie.Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Movie.Name" class="form-control" />
            <span asp-validation-for="Movie.Name" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="Movie.Description" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Movie.Description" class="form-control" />
            <span asp-validation-for="Movie.Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Movie.Duration" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Movie.Duration" class="form-control" />
            <span asp-validation-for="Movie.Duration" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Movie.ThumbnailUrl" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Movie.ThumbnailUrl" class="form-control" />
            <span asp-validation-for="Movie.ThumbnailUrl" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Movie.FilmUrl" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Movie.FilmUrl" class="form-control" />
            <span asp-validation-for="Movie.FilmUrl" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="Movie.ReleaseDate" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Movie.ReleaseDate" class="form-control" />
            <span asp-validation-for="Movie.ReleaseDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Categories" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="CategoryId" class="form-control"
                    asp-items="Model.Categories"></select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Update Movie" />
        </div>
    </div>
</form>

