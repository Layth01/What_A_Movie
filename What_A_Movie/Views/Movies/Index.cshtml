@model IEnumerable<What_A_Movie.Models.Movie>
<html>
<head>
    <link href="~/content/movies.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            @foreach (var mov in Model)
            {
            <div class="col-md-4">
                <div class="product-card mx-auto mb-30  m-2">
                    <div class="product-head d-flex justify-content-between align-items-center">
                        <span class="badge badge-danger"></span>
                        <div class="rating-stars">
                            <i class="fa fa-star active"></i><i class="fa fa-star active"></i><i class="fa fa-star active"></i><i class="fa fa-star active"></i><i class="fa fa-star"></i>
                        </div>
                    </div>
                    <a class="product-thumb" asp-controller="Movies" asp-action="Details"><img src="@mov.ThumbnailUrl" alt="Product Thumbnail"></a>
                    <div class="product-card-body">
                        <a class="product-meta" href="#">@mov.Genre</a>
                        <h5 class="product-title"><a asp-controller="Movies" asp-action="Details">@mov.Name</a></h5><span class="product-price">
                            @mov.Likes
                        </span>
                    </div>

                </div>
            </div>
            }
        </div>

    </div>
</body>
</html>