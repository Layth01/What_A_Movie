<div class="row p-4 ">
    @foreach (var mov in Model)
    {
    <div class="col-md-4 col-sm-3 col-lg-3">
        <div class="card m-2 overflow-auto">
            <img src="@mov.ThumbnailUrl" class="img-fluid" />

            <div class="card-body">
                <p class="card-title"><strong>@mov.Name</strong></p>
                <p class="card-text">@mov.Description</p>
                <a class="btn bg-primary text-white">More Details</a> 
            </div>
        </div>
    </div>
    }

</div>