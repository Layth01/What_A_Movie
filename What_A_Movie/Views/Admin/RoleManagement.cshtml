@using Microsoft.AspNetCore.Identity

@model IEnumerable<IdentityRole>

<h2>Role Managemet</h2>
@if (!Model.Any())
{
    <tr><td colspan="3" class="text-center">No roles defined yet. Please create the </td></tr>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>Role ID</th>
            <th>Role name</th>
            <th>User</th>
        </tr>
        @foreach(var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form asp-action="DeleteRole" asp-route-Id="@role.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="EditRole" asp-route-Id="@role.Id">EditRole</a>
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
               
        
        </tr>
        }
    </table>
}
